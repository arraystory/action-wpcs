<?xml version="1.0"?>
<ruleset
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	name="WPCS Checker"
	xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

	<description>WordPress Coding Standards - Security focused</description>

	<!-- Text Domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="__TEXT_DOMAIN__"/>
			</property>
		</properties>
	</rule>

	<!-- Prefixes -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="__PREFIXES__"/>
			</property>
		</properties>
	</rule>

	<!-- Exclude Paths -->
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>
	<exclude-pattern>assets/*</exclude-pattern>
	<exclude-pattern>build/*</exclude-pattern>
	<exclude-pattern>dist/*</exclude-pattern>
	<exclude-pattern>tests/*</exclude-pattern>

	<!-- Basic Configuration -->
	<arg name="extensions" value="php"/>
	<arg name="basepath" value="."/>
	<arg name="parallel" value="20"/>
	<arg value="ps"/>
	<arg name="colors"/>

	<!-- PHP Compatibility -->
	<config name="testVersion" value="__MINIMUM_PHP__-"/>
	<rule ref="PHPCompatibilityWP"/>

	<!-- WordPress Version -->
	<config name="minimum_wp_version" value="6.0"/>

	<!--
	#############################################################################
	SECURITY - Escaping
	#############################################################################
	-->
	<rule ref="WordPress.Security.EscapeOutput"/>

	<!--
	#############################################################################
	SECURITY - Sanitization
	#############################################################################
	-->
	<rule ref="WordPress.Security.ValidatedSanitizedInput"/>

	<!--
	#############################################################################
	SECURITY - Nonces
	#############################################################################
	-->
	<rule ref="WordPress.Security.NonceVerification"/>

	<!--
	#############################################################################
	SECURITY - SQL
	#############################################################################
	-->
	<rule ref="WordPress.DB.PreparedSQL"/>
	<rule ref="WordPress.DB.PreparedSQLPlaceholders"/>
	<rule ref="WordPress.DB.DirectDatabaseQuery"/>

	<!--
	#############################################################################
	SECURITY - Inline Scripts/Styles
	#############################################################################
	-->
	<rule ref="WordPress.WP.EnqueuedResources"/>

	<!--
	#############################################################################
	SECURITY - Misc
	#############################################################################
	-->
	<rule ref="WordPress.PHP.DiscouragedPHPFunctions">
		<properties>
			<property name="exclude" type="array">
				<element value="obfuscation"/>
				<element value="system_calls"/>
				<element value="runtime_configuration"/>
			</property>
		</properties>
	</rule>
	<rule ref="WordPress.PHP.DevelopmentFunctions"/>
	<rule ref="WordPress.WP.AlternativeFunctions"/>
	<rule ref="WordPress.PHP.NoSilencedErrors"/>

</ruleset>
